{
   "compilerOptions": {
      "lib": [
         "dom",
         "es2017"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      //* Strict type-checking options*/
      "strict": true,
      "noImplicitAny": true
   }
}